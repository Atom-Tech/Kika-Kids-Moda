<Page x:Class="GerenciadorLojaRoupa.Views.Caixa"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GerenciadorLojaRoupa.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Caixa">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Margin="5" BorderBrush="SteelBlue" Header="Entrada">
            
        </GroupBox>
        <GroupBox Margin="5" BorderBrush="SteelBlue" Header="Saída" Grid.Column="1">

        </GroupBox>
        <Button Grid.Row="1" Click="Button_Click" Content="Abrir Caixa" Template="{DynamicResource ButtonTemplate}" Margin="3"/>
    </Grid>
</Page>
